    "@slynova/flydrive-s3": "^1.0.3",
    "bcrypt": "^5.1.0",
    "bull": "^4.10.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connect-redis": "^7.0.1",
    "express-session": "^1.17.3",
    "ioredis": "^5.3.1",
    "nanoid": "^4.0.1",
    "nestjs-pino": "^3.1.2",
    "node-ffmpeg-installer": "^1.1.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
